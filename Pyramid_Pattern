def pyramid(n):
    for i in range(n):
        # Print leading spaces
        for j in range(n - i - 1):
            print(' ', end=' ')
        # Print '*' characters
        for j in range(2 * i + 1):
            print('*', end=' ')
        print()

n = 5  # We can change this value to create a larger or smaller pyramid
pyramid(n)
